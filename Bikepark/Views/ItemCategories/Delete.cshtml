@model Bikepark.Models.ItemCategory

@{
    ViewData["Title"] = "Удалить категорию прокатных единиц";
    ViewData["menu"] = "storage";
    Layout = "_MainLayout";
    int typesCount = ViewBag.ItemTypesCount;
}

<h3>Удалить</h3>

<h4>Вы дейсвительно хотите удалить категорию?</h4>
<div>
    @if(typesCount==0){
        <h5>В категории ничего нет</h5>
    }
    else
    {
        <h5 style="display:inline">Число моделей (велосипедов/амуниции) в этой категории:</h5>  <h3 style="display:inline">@typesCount</h3>
        <p><a target="_blank" rel="noopener noreferrer" href="/Storage/InCategory/?id=@Model.ItemCategoryID">Просмотреть в новой вкладке?</a></p>
        <p>Если удалить категорию модели остануться в базе склада, но без присвоенной категории</p>
    }

        <hr />
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemCategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemCategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Accessories)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Accessories)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemCategoryID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Отмена</a>
    </form>
</div>
