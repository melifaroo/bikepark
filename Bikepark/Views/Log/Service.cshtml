@model Bikepark.Models.Number

@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Назначить ремонт по номеру";
}

<h3>Отремонтировать</h3>

<h4>Введите номер велосипеда</h4>
<div class="container-sm">
    <hr />
    <form asp-action="ControlNumberService" id="item-form">        
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ItemNumber" class="control-label"></label>
                    <input asp-for="ItemNumber" class="form-control" required/>
                    <span asp-validation-for="ItemNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary col-md-12">Назначить ремонт</button>
                </div>
            </div>
        </div>
    </form>
    
    <div class="mt-3 col-md-4">
        @if (Model.IsResponse)
        {
            if (!Model.IsSuccess)
            {
                <div class="alert alert-danger">
                    @Model.Message
                </div>
            }
        }    
    </div>
</div>

@section Scripts {          
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}