@model Bikepark.Models.PricingCategory

@{
    ViewData["Title"] = "Создать категорию тарифов";
    ViewData["menu"] = "pricing-categories";
    Layout = "_MainLayout";
}

<h3>Создать</h3>

<h4>Категория тарифа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PricingCategoryName" class="control-label"></label>
                <input asp-for="PricingCategoryName" class="form-control" />
                <span asp-validation-for="PricingCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
