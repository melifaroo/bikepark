@model IEnumerable<Bikepark.Models.PricingCategory>

@{
    ViewData["Title"] = "Категории тарификации";
    ViewData["menu"] = "pricing-categories";
    Layout = "_MainLayout";
}

<h1>Категории тарификации</h1>
<div class="d-flex flex-wrap justify-content-between align-items-center border-bottom">
    <ul class="nav col-md-6 justify-content-start">
        <li class="nav-item">
            <a class="nav-link" asp-action="Create">Создать новую</a>
        </li> 
        <li class="nav-item">
            <a class="nav-link" asp-action="Index" asp-controller="Pricings" >Тарифы</a>
        </li>    
        <li class="nav-item">
            <a class="nav-link" asp-action="Index" asp-controller="Storage" >Склад</a>
        </li>     
    </ul>

    <ul class="nav  col-md-6 justify-content-end">
        <li class="nav-item">
            <a class="nav-link" asp-action="Export">Загрузить таблицу XLS</a>
        </li>    
        <li class="nav-item"> 
            <a class="nav-link" asp-action="Main" asp-controller="Storage">Управление</a> 
        </li>    
    </ul>  
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PricingCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PricingCategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PricingCategoryID">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.PricingCategoryID">Просмотр</a> |
                <a asp-action="Delete" asp-route-id="@item.PricingCategoryID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
