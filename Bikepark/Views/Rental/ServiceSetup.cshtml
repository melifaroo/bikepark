

@model IEnumerable<Bikepark.Models.ItemRecord>

@using Bikepark.Models
@using Microsoft.EntityFrameworkCore
@using Bikepark.Views.Helpers

@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Ремонт";
    ItemRecord someItemRecord = new ItemRecord();
}
    <form  id="fixing-control" asp-controller="Rental" class="container-sm">
        <div class="container-fluid"> 
            <div class="row justify-content-start mx-0 align-self-baseline" >  
                <h4 class="row">Требуется ремонт</h4> 
                <div class="row ms-5">укажите что ремонтировать для расчета стоимости </div> 
                <div class="row ms-5">назначьте сроки (не обязательно) </div> 
            </div>
        </div>
        <hr />

         <div class="container-fluid" id="fixing-control-title"> 
            <div class="row" >         
                <div class="d-flex justify-content-start col-3">
                    <button type="submit" asp-action="SaveServiceRecords" id="btn-update" class="btn btn-primary  col-12 mx-0 text-truncate" style="display: inline;" >        
                        <i class="bi bi-save"></i>                          
                        Сохранить
                    </button>    
                </div>  
                <div class="d-flex justify-content-end col-6">
                </div>
                <div class="d-flex justify-content-end col-3">
                    <button type="submit" asp-action="Index" class="btn btn-secondary col-12 " id="btn-discard" formnovalidate="formnovalidate" >
                        <i class="bi bi-arrow-return-left"></i>
                    </button>
                </div>
            </div>
        </div>
        <hr />

        <table class="tablealign">
            <thead>
                <tr>
                    <th style="width : 200px">
                        <div class="row-sm">Назначить ремонт</div>
                    </th>
                    <th style="width : 15%">
                        <div class="row-sm">@Html.DisplayNameFor(m => someItemRecord.Item.ItemType)</div>
                    </th>
                    <th style="width : 10%">
                        <div class="row-sm">@Html.DisplayNameFor(m => someItemRecord.Item.ItemNumber)</div>
                    </th >
                    <th style="width : 15%">
                        <div class="row-sm">@Html.DisplayNameFor(m => someItemRecord.Start)</div>
                    </th>
                    <th  style="width : 20%">
                        <div class="row-sm">@Html.DisplayNameFor(m => someItemRecord.Pricing.PricingName)</div>
                    </th>
                    <th style="width : 10%">
                        <div class="row-sm">Сумма</div>
                    </th>
                </tr>
            </thead>
            <tbody id="fixing-items-list">
                @foreach (var itemRecord in Model)
                {
                    <partial name="_ItemFixRecordRow" model = "@itemRecord" />  
                }
            </tbody>
        </table>

    
    </form>
    
@section Scripts {          
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/css/rent-main.css" rel="stylesheet" asp-append-version="true" /> 
}


                                

