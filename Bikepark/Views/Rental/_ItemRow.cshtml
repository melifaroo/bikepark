@model Bikepark.Models.Item
@using Bikepark.Models
@using Microsoft.EntityFrameworkCore;
@using HtmlHelpers.BeginCollectionItemCore
@{
}   

<tr class="item" data-itemid="@Model.ItemID" data-id="@Model.GetHashCode()">  
    <input type="hidden" name="Items.index" autocomplete="nope" value="@Model.GetHashCode()" />
    <td class="td-buttons"  style="width : 150px;">
        <div class="d-flex flex-row">
            <button type="button" class="btn btn-sm btn-outline-danger btn-item-delete" data-itemid="@Model.ItemID">
                <i class="bi bi-x"></i></button>
        </div>            
        <input name="Items[@Model.GetHashCode()].ItemID"          value="@Model.ItemID"       class="itemid" type="hidden"/> 
        <input name="Items[@Model.GetHashCode()].ItemNumber"          value="@Model.ItemNumber"       class="itemid" type="hidden"/> 
    </td>      
    <td  style="width : 10%; font-weight: bold">
        <a target="_blank" rel="noopener noreferrer" href="/Rental/ItemRentalDetails?id=@Model.ItemID">
            @Html.DisplayFor(m => Model.ItemNumber)
        </a>
    </td>   
    <td>
        @Html.DisplayFor(m => Model.ItemType.ItemTypeName)
    </td>   
</tr>   
